<div class="d-inline-flex" style="margin-top: 1%; margin-bottom:1%; margin-left:3%">
    @foreach (var item in Model.Take(1))
    {
        @Html.DropDownListFor(c => item.Categories, (IEnumerable<SelectListItem>)ViewBag.SelectCat,"Kategorie", new { @class = "form-control" })
        @Html.DropDownListFor(c => item.ManufacturerId, (IEnumerable<SelectListItem>)ViewBag.SelectManu, "Hersteller", new { @class = "form-control" })
    }
</div>


<div class="products">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Shop", new { id = item.Id })" class="product-card">
            <div class="product-image">
                <img src="@item.ImagePath" alt="">
            </div>
            <div class="product-info">
                <h3>@item.ManufacturerName</h3>
                <h6>@item.ProductName</h6>
                <h7>@Html.DisplayFor(model => item.NetUnitPrice)</h7>
            </div>
        </a>
    }
</div>
