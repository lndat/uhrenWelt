@model IEnumerable<uhrenWelt.Models.Cart>
@{
    ViewBag.Title = "Einkaufswagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Einkaufswagen</h2>
    <p>
        <a href="javascript:void(0);" class="removeStyle" onclick="history.go(-1);">Zurück</a>
    </p>
@if (Model != null)
{
    <table class="table table-bordered">
        <tr>
            <th>Bild</th>
            <th>Manufacturer</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Einzelpreis</th>
            <th>Gesamt Preis</th>
        </tr>
        @foreach (var cart in Model)
        {
            <tr>
                <td>
                    <img src="@cart.ImagePath" style="max-height:3em"/>
                </td>
                <td>@cart.ManufacturerName</td>
                <td>@cart.ProductName</td>
                <td>@cart.Amount</td>
                <td>@cart.NetUnitPrice</td>
                <td>@(cart.NetUnitPrice * cart.Amount)</td>
            </tr>
        }
    </table>
}
else
{
    <br/>
    <span style="color:red;">Einkaufswagen ist leer!</span>
}