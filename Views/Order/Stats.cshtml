@model IEnumerable<uhrenWelt.ViewModel.StatsVM>

@{
    ViewBag.Title = "Statistik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Statistik</h2>

<script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
<!--größe des charts ist so nicht gut gelöst, eventuell googlen oder dokumentation lesen-->
<canvas id="myChart"></canvas>
<script>
    $(document).ready(function () {
        var labels = ['default'];
        var data = [5];

        $.ajax({
            url: "/order/chartdata",
            type: "get",
            success: function (result) {
                labels = result.Labels;
                data = result.Values;
                paintChart(labels, data);
            }
        });
    });

    function paintChart(chartLabels, chartData) {
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'Verkaufte Stück',
                    data: chartData,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 3
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
</script>
<table class="table">
    <tr>
        <th>
            <h6>Produkt ID</h6>
        </th>
        <th>
            <h6>Produkt Name</h6>
        </th>
        <th>
            <h6>Verkaufte Stück</h6>
        </th>
        <th>
            <h6>Einnahmen Gesamt</h6>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetUnitPrice)
            </td>
        </tr>
    }
</table>