    <form class="form-inline" method="post" action="/Account/Login">
        <div class="container">
            <div class="flex-column">
                <div class="col-sm">
                    <label for="email">E-Mail:</label>
                    <input type="email" name="email" placeholder="Email-Adresse">
                </div>
                <div class="col-sm">
                    <label for="password">Passwort:</label>
                    <input type="password" name="password" placeholder="Passwort">
                </div>
                <div class="col-sm">
                    <button style="margin-top:10px;" class="btn btn-sm btn-secondary" type="submit">Login</button>
                </div>
            </div>
        </div> 
        @*<label><input type="checkbox" name="remember"> Remember me</label>*@      
    </form>

@if (ViewBag.Message != null && ViewBag.Message == "WrongLoginData")
{
    <br />
    <p style="color:red; text-align: center;">E-Mail-Adresse oder Passwort falsch!</p>
}
